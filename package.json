{
  "name": "shooter-game",
  "version": "1.0.0",
  "description": "The classic space shooter is back to life.",
  "main": "src/scripts/main.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "deploy": "webpack --mode production && surge --project './dist/' -- domain ivanderlich-space-shooter.surge.sh && xdg-open https://ivanderlich-space-shooter.surge.sh",
    "d": "webpack --mode production && surge --project './dist/' -- domain ivanderlich-space-shooter.surge.sh && xdg-open https://ivanderlich-space-shooter.surge.sh",
    "dn": "webpack --mode production && surge --project './dist/' -- domain ivanderlich-space-shooter.surge.sh",

    "build": "webpack --mode production && xdg-open ./dist/index.html",
    "b": "webpack --mode production && xdg-open ./dist/index.html",
    "bn": "webpack --mode production",

    "dev": "webpack --mode development && xdg-open ./dist/index.html",
    "q": "webpack --mode development && xdg-open ./dist/index.html",
    "qn": "webpack --mode development",
    "qw": "webpack --mode development --watch && xdg-open ./dist/index.html",

    "test": "jest",
    "t": "jest",

    "start": "webpack-dev-server --mode development --open",
    "s": "webpack-dev-server --mode development --open",
    
    "watch": "webpack --mode production --watch",
    "w": "webpack --mode production --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IvanDerlich/space-shooter-game.git"
  },
  "author": "Ivan Derlich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IvanDerlich/space-shooter-game/issues"
  },
  "homepage": "https://github.com/IvanDerlich/space-shooter-game#readme",
  "devDependencies": {
    "@babel/core": "^7.10.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.5.3",
    "eslint-plugin-import": "^2.20.2",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "node-sass": "^4.14.1",
    "path": "^0.12.7",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "eslint": "^7.1.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslit": "^6.0.0",
    "jest": "^26.0.1",
    "phaser": "^3.23.0"
  }
